<launch>
    <arg name="urdf_path" default="$(find-pkg-share my_robot_description)/urdf/my_robot.urdf.xacro"/>
    <arg name="rviz_config_path" default="$(find-pkg-share my_robot_description)/config/urdf_config.rviz"/>
    <arg name="gazebo_config_path" default="$(find-pkg-share my_robot_description)/config/gz_config.yaml"/>
    <arg name="world_path" default="$(find-pkg-share my_robot_description)/config/world_test.sdf"/>

    <!-- include gazebo file -->
    <include file="/opt/ros/jazzy/share/ros_gz_sim/launch/gz_sim.launch.py">
        <arg name="gz_args" value="$(var world_path) -r"/>
        <!-- <arg name="gz_args" value="empty.sdf -r"/>  -->
    </include>

    <!-- start state publisher -->
    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" value="$(command 'xacro $(var urdf_path)')"/>
    </node>

    <!-- spawn robot in gazebo -->
    <node pkg="ros_gz_sim" exec="create" output="screen" args="-topic robot_description"/>

    <!-- bridge -->
    <node pkg="ros_gz_bridge" exec="parameter_bridge">
        <param name="config_file" value="$(var gazebo_config_path)"/>
    </node>
    
    <!-- start rviz -->
    <node pkg="rviz2" exec="rviz2" output="screen" args="-d $(var rviz_config_path)"/>

</launch>